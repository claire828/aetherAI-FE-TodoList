        "libs/todolist/main/data-access/store/src/index.ts"
      ],
      "@monorepo/todolist/main/feature/home": [
        "libs/todolist/main/feature/home/src/index.ts"
      ],
      "@monorepo/todolist/main/ui/home": [
        "libs/todolist/main/ui/home/src/index.ts"
      ],
      "@monorepo/todolist/shared/api": [
        "libs/todolist/shared/api/src/index.ts"
